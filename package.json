{
  "name": "be",
  "version": "1.0.0",
  "description": "Fastify TypeScript Server",
  "main": "dist/index.js",
  "_moduleAliases": {
    "@": "dist"
  },
  "scripts": {
    "build": "tsc && copyfiles -u 1 src/**/*.html dist/",
    "start": "node -r module-alias/register dist/index.js",
    "dev": "nodemon src/index.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "typeorm": "typeorm-ts-node-commonjs",
    "typeorm:migration:generate": "npm run typeorm -- migration:generate",
    "typeorm:migration:run": "npm run typeorm -- migration:run -d src/config/migration-data-source.ts",
    "typeorm:migration:revert": "npm run typeorm -- migration:revert -d src/config/migration-data-source.ts",
    "seed": "ts-node -r tsconfig-paths/register src/scripts/seed.ts",
    "seed:badges": "ts-node -r tsconfig-paths/register src/scripts/seed-badges.ts"
  },
  "keywords": [
    "fastify",
    "typescript",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@fastify/jwt": "^9.1.0",
    "@fastify/postgres": "^6.0.2",
    "@fastify/redis": "^7.0.1",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@types/jsonwebtoken": "^9.0.10",
    "axios": "^1.11.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "fastify": "^5.4.0",
    "fastify-plugin": "^5.0.1",
    "fastify-type-provider-zod": "^5.0.1",
    "firebase-admin": "^13.4.0",
    "ioredis": "^5.6.0",
    "module-alias": "^2.2.3",
    "node-cron": "^4.2.1",
    "pg": "^8.15.6",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.22",
    "zod": "^3.24.2",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.11.10",
    "copyfiles": "^2.4.1",
    "nodemon": "^3.0.0",
    "ts-node": "^10.9.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.0"
  }
}
